<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black_overlay"
    tools:context="com.example.cibao.cibao.login.main_level.ActivityMainMenu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="172dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="@string/cn_MainMenu_Button_Block_MyLexicon"
                    android:textSize="24dp"
                    android:background="@color/MainMenu_Button_MyLexicon_Background_Static"
                    android:textColor="@color/white_overlay"
                    android:id="@+id/MainMenu_Button_Block_MyLexicon" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:text="每日一句"
                    android:textSize="24dp"
                    android:background="@color/MainMenu_Button_Nomination_Background_Static"
                    android:textColor="@color/white_overlay"
                    android:id="@+id/MainMenu_Button_Block_Nomination" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="172dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="添加单词"
                    android:textSize="24dp"
                    android:background="@color/MainMenu_Button_Music_BackGround_Static"
                    android:textColor="@color/white_overlay"
                    android:id="@+id/MainMenu_Button_Block_Music" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:text="背单词"
                    android:textSize="24dp"
                    android:background="@color/MainMenu_Button_Movie_Background_Static"
                    android:textColor="@color/white_overlay"
                    android:id="@+id/MainMenu_Button_Block_Movie" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
