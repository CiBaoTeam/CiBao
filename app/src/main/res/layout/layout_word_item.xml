<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LexiconTable_word_item_imageView_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/LexiconTable_word_item_textView_spelling"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/LexiconTable_word_item_imageView_image"
            android:layout_toEndOf="@+id/LexiconTable_word_item_imageView_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/LexiconTable_word_item_textView_meaning"
            android:layout_below="@+id/LexiconTable_word_item_textView_spelling"
            android:layout_toRightOf="@+id/LexiconTable_word_item_imageView_image"
            android:layout_toEndOf="@+id/LexiconTable_word_item_imageView_image" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不记得了"
            android:id="@+id/button_forget"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>